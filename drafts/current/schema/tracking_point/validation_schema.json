{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/tracking-point",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "TrackingPoint"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "trackingPointId": {
        "type": "string"
      },
      "pointType": {
        "type": "string",
        "enum": [
          "harvest_site",
          "skid_road",
          "forest_road",
          "mill_entrance"
        ]
      },
      "geographicDataId": {
        "type": "string"
      },
      "equipmentUsed": {
        "type": "string"
      },
      "operatorId": {
        "type": "string"
      },
      "establishedTimestamp": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "trackingPointId",
      "pointType",
      "geographicDataId",
      "equipmentUsed",
      "establishedTimestamp"
    ],
    "title": "Tracking Point",
    "description": "TrackingPoint entity in BOOST data model"
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "trackingPointId"
        }
      },
      {
        "!!": {
          "var": "pointType"
        }
      },
      {
        "!!": {
          "var": "geographicDataId"
        }
      },
      {
        "!!": {
          "var": "equipmentUsed"
        }
      }
    ]
  },
  "boost_metadata": {
    "entity": {
      "name": "TrackingPoint",
      "primaryKey": "trackingPointId",
      "area": "geographic_tracking",
      "description": "Specific tracking locations for biomass movement monitoring"
    },
    "relationships": [
      {
        "field": "geographicDataId",
        "targetEntity": "GeographicData",
        "relationshipType": "many-to-one",
        "required": true,
        "label": "located at"
      },
      {
        "field": "operatorId",
        "targetEntity": "Operator",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "operated by"
      }
    ]
  }
}