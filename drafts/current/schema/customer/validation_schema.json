{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/customer",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "Customer"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "customerId": {
        "type": "string"
      },
      "customerName": {
        "type": "string"
      },
      "address": {
        "type": "string"
      },
      "GeographicDataId": {
        "type": "string",
        "description": "Customer location - uses EntityNameId convention referencing GeographicData"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "customerId",
      "customerName"
    ],
    "title": "Customer",
    "description": "Customer entity in BOOST data model"
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "customerId"
        }
      },
      {
        "!!": {
          "var": "customerName"
        }
      }
    ]
  },
  "boost_metadata": {
    "entity": {
      "name": "Customer",
      "primaryKey": "customerId",
      "area": "material_supply_chain",
      "description": "üè™ Customer entity for buyers"
    },
    "relationships": [
      {
        "field": "GeographicDataId",
        "targetEntity": "GeographicData",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "located at"
      }
    ]
  }
}