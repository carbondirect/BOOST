{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/supply-base-report",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "SupplyBaseReport"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "sbrId": {
        "type": "string",
        "pattern": "^SBR-[A-Z0-9-_]+$"
      },
      "organizationId": {
        "type": "string",
        "pattern": "^ORG-[A-Z0-9-_]+$",
        "description": "Foreign key to Organization entity that prepared this report"
      },
      "preparationDate": {
        "type": "string",
        "format": "date"
      },
      "supplyBaseSummary": {
        "type": "string"
      },
      "sourcingPractices": {
        "type": "string"
      },
      "sustainabilityMeasures": {
        "type": "string"
      },
      "publicationUrl": {
        "type": "string",
        "format": "uri"
      },
      "reportGeographicDataId": {
        "type": "string",
        "pattern": "^GEO-[A-Z0-9-_]+$",
        "description": "Foreign key to GeographicData entity for report coverage area"
      },
      "supplyBaseIds": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^SB-[A-Z0-9-_]+$"
        },
        "description": "Array of SupplyBase IDs that this report covers"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "sbrId",
      "organizationId",
      "preparationDate"
    ],
    "title": "Supply Base Report",
    "description": "SupplyBaseReport entity in BOOST data model"
  },
  "boost_metadata": {
    "entity": {
      "name": "SupplyBaseReport",
      "primaryKey": "sbrId",
      "area": "material_supply_chain",
      "description": "ðŸ“‹ Supply base sustainability reporting document"
    },
    "relationships": [
      {
        "field": "organizationId",
        "targetEntity": "Organization",
        "relationshipType": "many-to-one", 
        "required": true,
        "label": "prepared by"
      },
      {
        "field": "reportGeographicDataId",
        "targetEntity": "GeographicData",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "report coverage area"
      },
      {
        "field": "supplyBaseIds",
        "targetEntity": "SupplyBase",
        "relationshipType": "many-to-many",
        "required": false,
        "label": "reports on",
        "example": "SBR-2023 covers sustainability of 'Olympic Forest Unit' + 'Cascade Unit'"
      }
    ]
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "sbrId"
        }
      },
      {
        "!!": {
          "var": "organizationId"
        }
      },
      {
        "!!": {
          "var": "preparationDate"
        }
      }
    ]
  }
}