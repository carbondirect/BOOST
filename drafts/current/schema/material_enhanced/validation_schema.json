{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/material-enhanced",
    "type": "object",
    "properties": {
      "@context": { "type": "object" },
      "@type": { "type": "string", "enum": ["Material"] },
      "@id": { "type": "string", "format": "uri" },
      "materialTypeId": { "type": "string" },
      "materialName": { "type": "string" },
      "materialCategory": {
        "type": "string",
        "enum": ["softwood", "hardwood", "mixed"]
      },
      "defaultAssortmentTypes": { "type": "string" },
      "standardQualityGrades": { "type": "string" },
      "carbonStorageRate": { "type": "string" },
      "density": { "type": "string" },
      "applicableProcessingTypes": {
        "type": "array",
        "items": { "type": "string" }
      },
      "typicalSpecies": {
        "type": "array",
        "items": { "type": "string" }
      },
      "standardMoistureContent": { "type": "string" },
      "energyContent": { "type": "string" },
      "applicablePlantParts": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["trunk", "branches", "twigs", "bark", "heartwood", "sapwood", "leaves", "needles", "seeds", "nuts", "cones", "stalks", "straw", "husks", "hulls", "chaff", "stubble"]
        },
        "description": "Plant parts included in this material type"
      },
      "excludedPlantParts": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["trunk", "branches", "twigs", "bark", "heartwood", "sapwood", "leaves", "needles", "seeds", "nuts", "cones", "stalks", "straw", "husks", "hulls", "chaff", "stubble"]
        },
        "description": "Plant parts excluded from this material type"
      },
      "plantPartProcessingSpecs": {
        "type": "object",
        "patternProperties": {
          "^(trunk|branches|twigs|bark|heartwood|sapwood|leaves|needles|seeds|nuts|cones|stalks|straw|husks|hulls|chaff|stubble)$": {
            "type": "object",
            "properties": {
              "processingMethods": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["sawing", "chipping", "pelletizing", "veneer", "pulping", "mulching", "composting", "burning"]
                }
              },
              "qualityGrades": {
                "type": "array",
                "items": { "type": "string" }
              },
              "moistureRange": { "type": "string" },
              "energyContent": { "type": "string" }
            }
          }
        },
        "description": "Processing specifications by plant part"
      },
      "lastUpdated": { "type": "string", "format": "date-time" }
    },
    "required": ["@context", "@type", "@id", "materialTypeId", "materialName", "materialCategory"]
  },
  "rules": {
    "and": [
      { "!!": { "var": "materialTypeId" } },
      { "!!": { "var": "materialName" } },
      { "!!": { "var": "materialCategory" } },
      {
        "if": [
          { "var": "applicableProcessingTypes" },
          { ">": [{ "var": "applicableProcessingTypes.length" }, 0] },
          true
        ]
      },
      {
        "if": [
          { "var": "typicalSpecies" },
          { ">": [{ "var": "typicalSpecies.length" }, 0] },
          true
        ]
      }
    ]
  }
}