{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/supplier",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "Supplier"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "supplierId": {
        "type": "string"
      },
      "supplierName": {
        "type": "string"
      },
      "address": {
        "type": "string"
      },
      "certificateCode": {
        "type": "string"
      },
      "claim": {
        "type": "string"
      },
      "supplierType": {
        "type": "string"
      },
      "supplierGeographicDataId": {
        "type": "string"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "supplierId",
      "supplierName"
    ],
    "title": "Supplier",
    "description": "Supplier entity in BOOST data model"
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "supplierId"
        }
      },
      {
        "!!": {
          "var": "supplierName"
        }
      }
    ]
  }
}