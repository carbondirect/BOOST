{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/supply-base",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "SupplyBase"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "supplyBaseId": {
        "type": "string"
      },
      "OrganizationId": {
        "type": "string",
        "description": "Managing organization - uses EntityNameId convention referencing Organization"
      },
      "supplyBaseName": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "harvestSites": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "skidRoads": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "forestRoads": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "equipmentDeployment": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "traceableUnitIds": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "speciesAvailable": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "GeographicDataId": {
        "type": "string",
        "description": "Supply base location - uses EntityNameId convention referencing GeographicData"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "supplyBaseId",
      "OrganizationId",
      "supplyBaseName",
      "description"
    ],
    "title": "Supply Base",
    "description": "SupplyBase entity in BOOST data model"
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "supplyBaseId"
        }
      },
      {
        "!!": {
          "var": "organizationId"
        }
      },
      {
        "!!": {
          "var": "supplyBaseName"
        }
      },
      {
        "!!": {
          "var": "description"
        }
      }
    ]
  }
}