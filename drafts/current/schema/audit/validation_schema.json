{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/audit",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "Audit"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "auditId": {
        "type": "string",
        "pattern": "^AUD-[A-Z0-9-_]+$"
      },
      "auditType": {
        "type": "string",
        "enum": [
          "Initial",
          "Surveillance",
          "Transfer"
        ]
      },
      "auditDate": {
        "type": "string",
        "format": "date"
      },
      "organizationId": {
        "type": "string",
        "pattern": "^ORG-[A-Z0-9-_]+$"
      },
      "cbId": {
        "type": "string",
        "pattern": "^CB-[A-Z0-9-_]+$"
      },
      "findings": {
        "type": "string"
      },
      "reportUrl": {
        "type": "string",
        "format": "uri"
      },
      "auditGeographicDataId": {
        "type": "string",
        "pattern": "^GEO-[A-Z0-9-_]+$"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "auditId",
      "auditType",
      "auditDate",
      "organizationId"
    ],
    "title": "Audit",
    "description": "Audit entity in BOOST data model"
  },
  "rules": {
    "and": [
      {
        "!!": {
          "var": "auditId"
        }
      },
      {
        "!!": {
          "var": "auditType"
        }
      },
      {
        "!!": {
          "var": "auditDate"
        }
      },
      {
        "!!": {
          "var": "organizationId"
        }
      }
    ]
  },
  "boost_metadata": {
    "entity": {
      "name": "Audit",
      "primaryKey": "auditId",
      "area": "organizational_foundation",
      "description": "Audit records for certification compliance verification"
    },
    "relationships": [
      {
        "field": "organizationId",
        "targetEntity": "Organization",
        "relationshipType": "many-to-one",
        "required": true,
        "label": "auditing"
      },
      {
        "field": "cbId",
        "targetEntity": "CertificationBody",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "conducted by"
      },
      {
        "field": "auditGeographicDataId",
        "targetEntity": "GeographicData",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "conducted at"
      }
    ]
  }
}