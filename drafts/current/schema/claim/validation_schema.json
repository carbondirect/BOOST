{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/claim",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "Claim"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "claimId": {
        "type": "string"
      },
      "TraceableUnitId": {
        "type": "string",
        "description": "Referenced traceable unit - uses EntityNameId convention referencing TraceableUnit"
      },
      "claimType": {
        "type": "string",
        "enum": [
          "SBP-compliant",
          "FSC Mix",
          "RSB Global",
          "PEFC",
          "organic",
          "FSC 100%",
          "FSC Recycled",
          "ISCC EU",
          "RED II"
        ]
      },
      "CertificationSchemeId": {
        "type": "string",
        "description": "Certification scheme - uses EntityNameId convention referencing CertificationScheme"
      },
      "statement": {
        "type": "string"
      },
      "validated": {
        "type": "boolean"
      },
      "validatedBy": {
        "type": "string"
      },
      "validationDate": {
        "type": "string",
        "format": "date-time"
      },
      "applicableSpecies": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "claimPercentage": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "claimScope": {
        "type": "string",
        "enum": [
          "harvest",
          "processing",
          "transport",
          "full_chain"
        ]
      },
      "evidenceDocumentId": {
        "type": "string"
      },
      "claimExpiry": {
        "type": "string",
        "format": "date-time"
      },
      "inheritedFromTRU": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "lastUpdated": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "claimId",
      "TraceableUnitId",
      "claimType",
      "statement",
      "validated"
    ],
    "title": "Claim",
    "description": "Claim entity in BOOST data model"
  }
}