{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/carbondirect/BOOST/schemas/biometric-identifier",
    "type": "object",
    "properties": {
      "@context": {
        "type": "object"
      },
      "@type": {
        "type": "string",
        "enum": [
          "BiometricIdentifier"
        ]
      },
      "@id": {
        "type": "string",
        "format": "uri"
      },
      "biometricId": {
        "type": "string"
      },
      "traceableUnitId": {
        "type": "string"
      },
      "biometricSignature": {
        "type": "string"
      },
      "captureMethod": {
        "type": "string",
        "enum": [
          "optical_scanner",
          "photo_analysis"
        ]
      },
      "captureGeographicDataId": {
        "type": "string"
      },
      "captureTimestamp": {
        "type": "string",
        "format": "date-time"
      },
      "trackingPointId": {
        "type": "string"
      },
      "speciesBiometrics": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "@context",
      "@type",
      "@id",
      "biometricId",
      "traceableUnitId",
      "biometricSignature",
      "captureMethod",
      "captureTimestamp"
    ],
    "title": "Biometric Identifier",
    "description": "BiometricIdentifier entity in BOOST data model"
  },
  "boost_metadata": {
    "entity": {
      "name": "BiometricIdentifier",
      "primaryKey": "biometricId",
      "area": "core_traceability",
      "description": "Biometric signatures for unique biomass identification"
    },
    "relationships": [
      {
        "field": "traceableUnitId",
        "targetEntity": "TraceableUnit",
        "relationshipType": "many-to-one",
        "required": true,
        "label": "identifies"
      },
      {
        "field": "captureGeographicDataId",
        "targetEntity": "GeographicData",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "captured at"
      },
      {
        "field": "trackingPointId",
        "targetEntity": "TrackingPoint",
        "relationshipType": "many-to-one",
        "required": false,
        "label": "captured at point"
      }
    ]
  }
}